# MAKEFLAGS=-j4

BUILDDIR=@BUILDDIR@
BINDIR=@BINDIR@
TESTOBJ=@TESTOBJ@
LIBSRC=@LIBSRC@
LIBOBJ=@LIBOBJ@
LIBHDR=@LIBHDR@
PROGSRC=@PROGSRC@
PROGOBJ=@PROGOBJ@
PROGHDR=@PROGHDR@
PROGNAME=@PROGNAME@
PROG=$(BINDIR)/$(PROGNAME)
GENSRC=@GENSRC@
TARGETS=@TARGETS@
TESTS=@TESTS@
CONFIGITEMS=@CONFIGITEMS@
ADLIB=$(BUILDDIR)/adlib.a
LIBS=@LIBS@
INCLUDES=@INCLUDES@
CC=@CC@
CXX=@CXX@
OPT=@OPT@
DEBUG=0
DEFINES=-DADLIB_DEBUG=$(DEBUG)
CFLAGS=$(OPT) $(DEFINES) @CFLAGS@
LDFLAGS=
MKDIR=@mkdir -p
RM=rm
RE2C=@RE2C@
GCFLAGS=-DGC_FASTCALL= -DGC_CLIBDECL= -DGC_GETENV_SKIP

all: $(PROG) .FORCE
debug: .FORCE
	$(MAKE) DEBUG=1
prog: $(PROG) .FORCE
source: $(GENSRC) .FORCE

$(PROG): $(PROGOBJ) $(ADLIB)
	$(MKDIR) $(BINDIR)
	$(CXX) $(CFLAGS) -o $(PROG) $(PROGOBJ) $(ADLIB) $(LIBS)

$(ADLIB): $(LIBOBJ)
	$(RM) -f $(ADLIB)
	@AR@ rc $(ADLIB) $(LIBOBJ)
	@RANLIB@ $(ADLIB)
test: $(TESTS) .FORCE
	@for test in @TESTS@; do \
	  echo === $$test ===; \
	  $$test; \
	done
tests: $(TESTS) .FORCE
build.sh: .FORCE
	# GNU Make only rule
	@echo Generating $@ ...
	@cat cnf/build-preamble.sh >$@
	@$(MAKE) -nB CC=cc CXX=cxx prog \
		| egrep ^mkdir | sort -u >>$@
	@$(MAKE) -nB CC=cc CXX=cxx prog \
		| egrep -v '^(mkdir|re2c)' >>$@
	@echo finish >>$@
	@chmod 755 $@
tar: build.sh .FORCE
	ln -s . $(PROGNAME)
	tar czf $(PROGNAME).tar.gz $(PROGNAME)/{build.sh,adlib,src,gclib,cnf/*.*}
	$(RM) -f $(PROGNAME)
reformat: .FORCE
	clang-format -style=file -i `find adlib src -name '*.cc' -o -name '*.h'`
config: .FORCE
	./configure @CONFIG_ARGS@
clean: .FORCE
	$(RM) -f $(LIBOBJ) $(PROGOBJ) $(TESTOBJ) $(ADLIB)
cleanall: clean .FORCE
	$(RM) -f $(TARGETS)
distclean: cleanall .FORCE
	$(RM) -f $(CONFIGITEMS)
scrub: distclean .FORCE
	$(RM) -f $(GENSRC) Makefile autosetup/jimsh0
	$(RM) -rf $(BUILDDIR)
.FORCE:
.PHONY: test tests all debug prog source tar debug \
	config clean cleanall distclean scrub reformat
@RULES@
